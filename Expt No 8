<body>

<h2>JavaScript Number Object Operations</h2>

<p id="exp"></p>
<p id="limit"></p>
<p id="str"></p>
<p id="neg"></p>

<script>
    // Exponential value
    let num = 123.456;
    document.getElementById("exp").innerHTML =
        "Exponential value: " + num.toExponential(2);

    // Limit number of digits after decimal
    document.getElementById("limit").innerHTML =
        "Limited decimal value: " + num.toFixed(2);

    // Convert number to string
    let strNum = num.toString();
    document.getElementById("str").innerHTML =
        "Number as string: " + strNum;

    // Return negative infinity using Number object
    let negInf = Number.NEGATIVE_INFINITY;
    document.getElementById("neg").innerHTML =
        "Negative Infinity value: " + negInf;
</script>

</body>
</html>
