<%@ page import="javax.servlet.http.*" %>
<%@ page import="javax.servlet.*" %>
<%
    Integer count = (Integer)application.getAttribute("clientCount");
    if(count == null) {
        count = 1;
    } else {
        count++;
    }
    application.setAttribute("clientCount", count);
%>
<!DOCTYPE html>
<html>
<head>
    <title>Website Client Count</title>
</head>
<body>
    <h2>Total Visitors: <%= count %></h2>
</body>
</html>
